<div id="header" class="jumbotron card card-image">
  <div class="text-white text-center">
    <div>
      <h1 class="h1 card-title">Burger Devourer!</h1>

      <h2 class="headerTitle">Add your own burger to the list below and devour it!</h2>
      <form class="text-center create-form" style="color: #757575;">
        <div class="form-group">
          <label for="newburger"></label>
          <input type="text" id="newburger" name="burger">
          <button id="addburger" class="btn btn-primary btn-rounded z-depth-0 my-4 waves-effect" type="submit">Add
            Burger</button>
        </div>
      </form>

    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">

    <div class="col-0 col-md-1 col-xl-1"></div>
    <div class="card container col-12 col-md col-xl">
      <div class="card-header">
        <h2 class="cardHeader">Burgers to Eat</h2>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          {{#each burgers}}
          {{#unless devoured}}
          <button type="button" class="eatburger btn btn-outline-primary btn-rounded z-depth-0 my-4 waves-effect mr-3"
            id="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><i
              class="fas fa-hamburger fa-lg mr-3"></i>Devour</button>
          <span><strong>{{this.burger_name}} </strong></span>
          <hr>
          {{/unless}}
          {{/each}}
        </li>
      </ul>
    </div>

    <div class="col-0 col-md-1 col-xl-1"></div>

    <div class="card container col-12 col-md col-xl">
      <div class="card-header">
        <h2 class="cardHeader">Devoured Burgers</h2>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          {{#each burgers}}
          {{#if devoured}}
          <button type="button" class="trashburger btn btn-outline-primary btn-rounded z-depth-0 my-4 waves-effect mr-3"
            id="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><i
              class="fa fa-trash fa-lg mr-3"></i>Delete</button>
          <span><strong>{{this.burger_name}} </strong></span>
          <hr>
          {{/if}}
          {{/each}}
        </li>
      </ul>
    </div>
    <div class="col-0 col-md-1 col-xl-1"></div>


  </div>
</div>

<div class="modal fade" id="centralModalSm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">

  <div class="modal-dialog modal-fluid" role="document">


    <div class="modal-content">
      <img src="../public/assets/images/mouth.gif">
    </div>
  </div>
</div>